{
  "git": {
    "commitMessage": "release: v${version}",
    "commitArgs": ["--no-verify"],
    "requireCleanWorkingDir": false,
    "push": false
  },
  "npm": {
    "release": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
